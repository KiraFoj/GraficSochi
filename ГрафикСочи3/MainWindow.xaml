            x:Name="averageTextBox"
            Width="120"
            Margin="91,357,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <Button
            Width="109"
            Height="37"
            Margin="249,347,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="StartButton_Click"
            Content="Старт" />
        <Button
            Width="117"
            Height="39"
            Margin="390,345,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="StopButton_Click"
